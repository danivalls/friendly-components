{
  "name": "friendly-components",
  "version": "0.3.1",
  "description": "A react components library made with ❤️",
  "author": "danivalls",
  "license": "MIT",
  "repository": "danivalls/friendly-components",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.ts",
  "homepage": "https://danivalls.github.io/friendly-components/",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "react-scripts test --env=jest-environment-jsdom-sixteen",
    "coverage": "npm test -- --coverage  --env=jest-environment-jsdom-sixteen --watchAll",
    "predeploy": "cd docs && yarn install && yarn run build",
    "deploy": "gh-pages -d docs/build"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.0.3",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^17.0.0",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/react-helmet": "^6.1.4",
    "@types/tinycolor2": "^1.4.3",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^5.5.3",
    "gh-pages": "^2.2.0",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "prettier-plugin-organize-imports": "^2.3.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "styled-components": "^5.3.3",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/styled-components": "^5.1.18",
    "iconoir-react": "^5.0.0",
